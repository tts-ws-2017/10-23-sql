<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">Flowers</h1>
    <p>Flowers are so great!</p>
    <p><%= link_to 'Create a Flower', new_flower_path, :class => 'btn btn-primary btn-lg' %>
  </div>
</div>
<div class="container">
  <div class="row">
  <p id="notice"><%= notice %></p>
  </div>

  <div class="row">
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col" class="col-3">Name</th>
        <th scope="col" class="col-3">Smell</th>
        <th scope="col" class="col-2">Pretty</th>
        <th scope="col" class="col-2">Height</th>
        <th scope="col" class="col-2"></th>
      </tr>
    </thead>

    <tbody>
      <% @flowers.each do |flower| %>
        <tr>
          <td scope="col"><%= flower.name %></td>
          <td scope="col"><%= flower.smell %></td>
          <td scope="col"><%= flower.pretty %></td>
          <td scope="col"><%= flower.height %></td>
          <td scope="col">
            <div class="btn-group" role="group" aria-label="Basic example">
            <%= link_to 'Show', flower, :class => 'btn btn-secondary' %>
            <%= link_to 'Edit', edit_flower_path(flower), :class => 'btn btn-secondary' %>
            <%= link_to 'Destroy', flower, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-secondary'%></td>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <br>

</div>